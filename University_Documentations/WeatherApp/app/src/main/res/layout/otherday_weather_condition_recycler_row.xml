<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewDayName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/poppins"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:text="Monday" />

    <ImageView
        android:id="@+id/imageViewOtherDayWeatherConditionIcon"
        android:layout_width="80dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/textViewotherDayWeatherConditionName"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:text="Sunny" />

    <TextView
        android:id="@+id/textViewOtherDayWeatherConditionMinTemp"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:text="31°" />

    <TextView
        android:id="@+id/textViewOtherDayWeatherConditionMaxTemp"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/poppins"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        tools:text="51°" />


</LinearLayout>